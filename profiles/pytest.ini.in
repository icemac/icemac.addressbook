[pytest]
addopts = {% for test_egg in parts.pytest_ini.test_eggs | split -%}
             {% set test_egg = test_egg.replace('[test]', '').strip() -%}			 {% for path in eggs.entries -%}
			 	{% if '/' + test_egg + '-' in path or
                      '/' + test_egg + '/' in path -%}
					{{path + ' '}}
				{%- endif %}
			 {%- endfor %}
		  {%- endfor %} --flake8
python_files = test[s|_]*.py
