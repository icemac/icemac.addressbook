<div id="info-messages"
     tal:define="messages view/messages"
     tal:condition="messages">
  <script language="JavaScript">
    $(document).ready(function() { setTimeout(function() {$("#info-messages").fadeOut("normal")}, 2000); })
  </script>
  <ul>
    <li tal:repeat="message messages"
        tal:content="message/message" />
  </ul>
</div>
